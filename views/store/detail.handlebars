<div class="container">
    <ul class="breadcrumb">
        <li><a href="{{url 'store'}}">点餐</a></li>
        <li class="active">{{store.name}}</li>
    </ul>
    <div class="page-header">
        <h3>店铺套餐</h3>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover">
                <col width="20%"/>
                <col width="30%"/>
                <col width="30%"/>
                <col width="20%"/>
                <thead>
                <tr>
                    <th>序号</th>
                    <th>名称</th>
                    <th>价格</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {{#each foods}}
                    <tr>
                        <td>{{index @index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.price}}元</td>
                        <td>
                            {{#if ../session.user}}
                                <div>
                                    <button data-foodid="{{this.id}}" data-storeid="{{../../store.id}}" type="button"
                                            class="btn btn-primary btn-xs js-order">订餐
                                    </button>
                                    <select>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                        <option value="4">4</option>
                                        <option value="5">5</option>
                                        <option value="6">6</option>
                                        <option value="7">7</option>
                                        <option value="8">8</option>
                                        <option value="9">9</option>
                                        <option value="10">10</option>
                                        <option value="11">11</option>
                                        <option value="12">12</option>
                                        <option value="13">13</option>
                                        <option value="14">14</option>
                                        <option value="15">15</option>
                                        <option value="16">16</option>
                                        <option value="17">17</option>
                                        <option value="18">18</option>
                                        <option value="19">19</option>
                                        <option value="20">20</option>
                                    </select>
                                </div>
                            {{/if}}
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="page-header">
        <h3>店铺详情</h3>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover">
                <tbody>
                <tr>
                    <td>店铺名称</td>
                    <td>{{store.name}}</td>
                </tr>
                <tr>
                    <td>主营产品</td>
                    <td>{{store.mainProduct}}</td>
                </tr>
                <tr>
                    <td>联系电话</td>
                    <td>{{store.telephone}}</td>
                </tr>
                <tr>
                    <td>店铺地址</td>
                    <td>{{store.address}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>