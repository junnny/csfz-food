<form class="form-horizontal form-container" id="registerForm" method="post" action="{{url 'register'}}">
    <fieldset>
        <div class="page-header">
            <h3>用户注册</h3>
        </div>
        {{#if errors}}
            <div class="alert alert-danger">
                {{#each errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}
        <div class="form-group">
            <label class="col-lg-2 control-label"><span class="required">*</span> 邮箱</label>

            <div class="col-lg-10">
                <input type="text" class="form-control" name="email" value="{{user.email}}">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> <span class="required">*</span> 密码</label>

            <div class="col-lg-10">
                <input type="password" class="form-control" name="password" id="inputPassword"
                       placeholder="6~15数字、字母和下划线组合，区分大小写">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"><span class="required">*</span> 确认密码</label>

            <div class="col-lg-10">
                <input type="password" class="form-control" name="confirmPassword">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"><span class="required">*</span> 真实姓名</label>

            <div class="col-lg-10">
                <input type="text" class="form-control" name="realname" value="{{user.realname}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary btn-block">注 册</button>
            </div>
        </div>
    </fieldset>
</form>